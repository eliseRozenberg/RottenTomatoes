<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <ImageView
        android:id="@+id/poster"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:adjustViewBounds="true"
        android:maxHeight="90dp"
        android:maxWidth="100dp"
        android:scaleType="fitCenter" />


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/poster"
        android:textSize="19sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/criticsImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/poster"
        android:adjustViewBounds="true"
        android:maxHeight="20dp"
        android:maxWidth="18dp" />

    <TextView
        android:id="@+id/criticsRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/criticsImage"
        android:textSize="15sp" />


    <ImageView
        android:id="@+id/audienceImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/criticsRating"
        android:adjustViewBounds="true"
        android:maxHeight="20dp"
        android:maxWidth="18dp" />

    <TextView
        android:id="@+id/audienceRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/audienceImage"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/cast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/criticsRating"
        android:layout_toRightOf="@id/poster"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/mpaa_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cast"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/poster" />

    <TextView
        android:id="@+id/runtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cast"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/mpaa_rating" />

</RelativeLayout>